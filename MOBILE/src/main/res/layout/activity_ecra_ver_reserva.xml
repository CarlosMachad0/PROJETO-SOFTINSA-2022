<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ecraVerReserva">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nomeEspaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="nome da sala"
                android:textSize="25dp"
                android:textColor="@color/azulPrimario"/>
            <ImageView
                android:id="@+id/img_qrcode"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="NÃºmero de participantes"
                    android:textColor="@color/azulPrimario"/>

                <TextView
                    android:id="@+id/maxParticipantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(max 15)"
                    android:textColor="@color/azulSecundario"/>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <NumberPicker
                android:id="@+id/numeroParticipantes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/asdas"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/azulPrimario"
                android:text="Etiqueta"/>

            <EditText
                android:id="@+id/etiqueta"
                android:padding="15dp"
                android:textSize="16dp"
                android:background="@drawable/asdas"
                android:inputType="text"
                android:hint="etiqueta (opcional)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/azulPrimario"
                android:text="Data *"/>

            <EditText
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asdas"
                android:hint="Data *"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/azulPrimario"
                android:text="Hora inicio *"/>

            <EditText
                android:id="@+id/horaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asdas"
                android:hint="Hora inicio *"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/azulPrimario"
                android:text="Hora fim *"/>

            <EditText
                android:id="@+id/horaFim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asdas"
                android:hint="Hora fim *"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txt_horaproreuniao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/azulPrimario"
                android:text=""
                android:visibility="gone"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Adiar"
                android:id="@+id/btn_adiar"
                android:layout_gravity="left"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:drawableTint="@color/azulSecundario"
                android:textColor="@color/azulSecundario"
                android:maxLines="1"
                android:visibility="gone"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Terminar"
                android:id="@+id/btn_terminar"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:drawableTint="@color/vermelho"
                android:textColor="@color/vermelho"
                android:maxLines="1"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Cancelar Reserva"
            android:id="@+id/btn_Delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:drawableTint="@color/vermelho"
            android:textColor="@color/vermelho"
            android:maxLines="1"
            android:visibility="gone"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:layout_marginRight="15dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btnReservar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDITAR RESERVA" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>